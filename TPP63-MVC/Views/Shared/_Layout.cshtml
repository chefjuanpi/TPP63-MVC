<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="../../Content/Game.css">

    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0-alpha.4/handlebars.min.js"></script>

    <!-- Game -->
    <script type="text/javascript" src='../../Game/Shortcuts.js'></script>
    <script type="text/javascript" src='../../Game/block.js'></script>
    <script type="text/javascript" src='../../Game/game.js'></script>

    <!-- Graph -->
    <script src="../../Scripts/JS xCharts/d3.v2.min.js"></script>
    <pre class="brush:js;" style="width: 1549.888916015625px;"><script src="../../Scripts/JS xCharts/xcharts.min.js"></script>
    <link rel="stylesheet" href="../../Scripts/JS xCharts/xcharts.min.css"></pre>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AcroCluster 5000", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Table de Honnor", "HallOfFame", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>